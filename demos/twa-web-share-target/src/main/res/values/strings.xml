<resources>
    <string name="app_name">Web Share Target Demo</string>
    <string name="asset_statements">
                [{
            \"relation\": [\"delegate_permission/common.handle_all_urls\"],
            \"target\": {
                \"namespace\": \"web\",
                \"site\": \"https://mvano.github.io/\"}
        }
        ]
    </string>
    <string name="provider_authority">com.google.androidbrowserhelper.webshare.fileprovider</string>
    <string name="share_target_text">
{
  \"action\": \"https://mvano.github.io/share-text/index.html\",
  \"method\": \"GET\",
  \"params\": {
    \"title\": \"title\",
    \"text\": \"text\",
    \"url\": \"url\"
  }
}
    </string>
    <string name="share_target_files">
{
    \"action\": \"https://mvano.github.io/share-files/index.html\",
    \"method\": \"POST\",
    \"enctype\": \"multipart/form-data\",
    \"params\": {
      \"title\": \"title\",
      \"text\": \"text\",
      \"url\": \"url\",
      \"files\": [{
          \"name\": \"files\",
          \"accept\": [\"image/*\"]
      }]
    }
}
    </string>
</resources>
